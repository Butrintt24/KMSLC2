<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Kindergarten Management System</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <img src="~/media/Images/logo.png" width="150" height="40" />
                </a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    <ul class="navbar-nav flex-grow-1 justify-content-end">
                        @if (User?.Identity?.IsAuthenticated ?? false)
                        {
                            @if (User.IsInRole("Admin"))
                            {
                                <li class="nav-item">
                                    <a class="btn btn-success m-2" asp-area="Admin" asp-controller="Dashboard" asp-action="Index">
                                        Admin Panel
                                    </a>
                                </li>
                            }

                            @if (User.IsInRole("Employee"))
                            {
                                <li class="nav-item">
                                    <a class="btn btn-success m-2" asp-area="EmployeePanel" asp-controller="Home" asp-action="Index">
                                        Employee Panel
                                    </a>
                                </li>
                            }

                            @if (User.IsInRole("Student"))
                            {
                                <li class="nav-item">
                                    <a class="btn btn-success m-2" asp-area="StudentPanel" asp-controller="Home" asp-action="Index">
                                        Student Panel
                                    </a>
                                </li>
                            }

                            @if (User.IsInRole("Employee"))
                            {
                                <li class="nav-item">
                                    <a class="btn btn-primary m-2" asp-area="EmployeePanel" asp-controller="Account" asp-action="Details">
                                        My Profile
                                    </a>
                                </li>

                            }

                            @if (User.IsInRole("Student"))
                            {
                                <li class="nav-item">
                                    <a class="btn btn-primary m-2" asp-area="StudentPanel" asp-controller="Account" asp-action="Details">
                                        My Profile
                                    </a>
                                </li>

                            }

                            <li class="nav-item">
                                <a class="btn btn-danger m-2" asp-controller="Account" asp-action="Logout">
                                    Log out
                                </a>
                            </li>
                        }
                        else
                        {
                            @*<li class="nav-item ml-1">
                                <a class="btn btn-success my-2" asp-controller="Account" asp-action="Login">Login</a>
                            </li>*@
                        }

                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            <partial name="_NotificationPartial" />
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2022 - Kindergarten_Management_System - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/ckeditor/ckeditor.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>

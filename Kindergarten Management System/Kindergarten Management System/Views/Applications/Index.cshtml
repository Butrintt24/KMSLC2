@model Application

@{
    ViewData["Title"] = "Application Form";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Application Form</h1>


<div class="row">
    <div class="col-md-10">
        <form asp-action="Index" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="FullName" class="control-label"></label>
                <input asp-for="FullName" class="form-control" />
                <span asp-validation-for="FullName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="BirthDate" class="control-label"></label>
                <input asp-for="BirthDate" class="form-control" />
                <span asp-validation-for="BirthDate" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="PersonalNumber" class="control-label"></label>
                <input asp-for="PersonalNumber" class="form-control" />
                <span asp-validation-for="PersonalNumber" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="LegalGuardian" class="control-label"></label>
                <input asp-for="LegalGuardian" class="form-control" />
                <span asp-validation-for="LegalGuardian" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="LegalGuardianOcupation" class="control-label"></label>
                <input asp-for="LegalGuardianOcupation" class="form-control" />
                <span asp-validation-for="LegalGuardianOcupation" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="ContactNumber" class="control-label"></label>
                <input asp-for="ContactNumber" class="form-control" />
                <span asp-validation-for="ContactNumber" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="City" class="control-label"></label>
                <select asp-for="City" class="form-control form-border-radius">
                    <option value=" ">Choose a City</option>
                    <option value="Ferizaj">Ferizaj</option>
                    <option value="Gjakove">Gjakove</option>
                    <option value="Gjilan">Gjilan</option>
                    <option value="Mitrovice">Mitrovice</option>
                    <option value="Peje">Peje</option>
                    <option value="Prishtine">Prishtine</option>
                    <option value="Prizren">Prizren</option>
                </select>
                <span asp-validation-for="City" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Offer" class="control-label"></label>
                <select asp-for="Offer" class="form-control form-border-radius">
                    <option value=" ">Choose an Offer</option>
                    <option value="Monthly Plan">Monthly Plan</option>
                    <option value="Quarterly Plan">Quarterly Plan</option>
                    <option value="Year Plan">Year Plan</option>
                </select>
                <span asp-validation-for="Offer" class="text-danger"></span>
            </div>

            <div class="d-flex">
                <div class="form-group mr-5">
                    <input class="form-check-input " type="radio" asp-for="Gender" value="M" id="G-M"><p id="input-male">Male</p>
                    <span asp-validation-for="Gender" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <input class="form-check-input " type="radio" asp-for="Gender" value="F" id="G-F"><p id="input-female">Female</p>
                    <span asp-validation-for="Gender" class="text-danger"></span>
                </div>
            </div>
            

            <div class="form-group">
            <label asp-for="Image" class="control-label label-font">Photo</label>
            <input asp-for="ImageUpload" class="form-control" /> <hr />
                <img src="" id="imgpreview" class="pt-2" />
            <span asp-validation-for="ImageUpload" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
     <script>
        $("#ImageUpload").change(function () {
            readURL(this);
        });

    </script>
}

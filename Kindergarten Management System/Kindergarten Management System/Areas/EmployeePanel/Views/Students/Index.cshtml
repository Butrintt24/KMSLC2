@model IEnumerable<AppUser>

@{
    ViewData["Title"] = "My Students";
}

<h1>My Students</h1>


<table class="table">
    <thead>
        <tr>
            <th>
                Full Name
            </th>

            <th>
                Student Image
            </th>

            <th>
                Email
            </th>
            <th>
                Contact Number
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FullName)
            </td>

            <td>
                <img src="~/media/studentpic//@item.StudentImage" width="50" height="50" style="border-radius: 100%;" />
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PhoneNumber)
            </td>

            <td>
                <a class="btn btn-outline-info" asp-action="Details" asp-route-id="@item.Id">Details</a>
            </td>
        </tr>
}
    </tbody>
</table>


@if (ViewBag.TotalPages > 1)
{
    <div class="d-flex w-100 justify-content-center">
        <pagination page-count="@ViewBag.TotalPages" page-target="/EmployeePanel/Students"
            page-number="@ViewBag.PageNumber" page-range="@ViewBag.PageRange">
        </pagination>
    </div>
}

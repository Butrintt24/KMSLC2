@using Microsoft.AspNetCore.Identity
@using Kindergarten_Management_System.Data

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="x-ua-compatible" content="ie=edge">

    <title>@ViewData["Title"] - Kindergarten</title>

    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.11.5/css/jquery.dataTables.min.css" />
    <link rel="stylesheet" href="~/css/all.min.css">
    <link rel="stylesheet" href="~/css/adminlte.min.css">
    <link href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700" rel="stylesheet">
    <link rel="stylesheet" href="~/css/dataTables.bootstrap4.min.css" />
    <link rel="stylesheet" href="//code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body class="hold-transition sidebar-mini">
    <div class="wrapper">
        <nav class="main-header navbar navbar-expand navbar-white navbar-light">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
                </li>
            </ul>
        </nav>
        <aside class="main-sidebar sidebar-dark-primary elevation-4 " style="position:fixed;">
            <a asp-area="" asp-controller="Home" asp-action="Index" class="brand-link d-flex justify-content-center">
                <p>Employee Panel</p>
            </a>

            <div class="sidebar">
                <hr />
                <nav class="mt-2">
                    <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">
                        @if (User?.Identity?.IsAuthenticated ?? false)
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-area="EmployeePanel" asp-controller="Account" asp-action="Details">
                                    <i class="fas fa-user-edit nav-icon"></i>
                                    <p>My Profile</p>
                                </a>
                            </li>
                        }
                        <li class="nav-item">
                            <a class="nav-link" asp-area="EmployeePanel" asp-controller="HomeWorks" asp-action="Index">
                                <i class="fas fa-file-alt nav-icon"></i>
                                <p>Homeworks</p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="EmployeePanel" asp-controller="Homeworksub" asp-action="Index">
                                <i class="fas fa-file-alt nav-icon"></i>
                                <p>Homework Submissions</p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="EmployeePanel" asp-controller="Funsides" asp-action="Index">
                                <i class="fas fa-paper-plane nav-icon"></i>
                                <p>Funside</p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="EmployeePanel" asp-controller="Briefings" asp-action="Index">
                                <i class="fa fa-bell nav-icon" aria-hidden="true"></i>
                                <p>Briefings</p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="EmployeePanel" asp-controller="Students" asp-action="Index">
                                <i class="fas fa-users nav-icon"></i>
                                <p>Students</p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="EmployeePanel" asp-controller="LeaveRequest" asp-action="MyLeave">
                                <i class="fas fa-users nav-icon"></i>
                                <p>My Leave Application</p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="EmployeePanel" asp-controller="LeaveRequest" asp-action="Create">
                                <i class="fas fa-users nav-icon"></i>
                                <p>Apply for Leave</p>
                            </a>
                        </li>
                    </ul>
                    <ul class="nav nav-pills nav-sidebar flex-column" style="position: absolute; left: 0; width: 100%; bottom: 0; padding: 5px;">
                        @if (User?.Identity?.IsAuthenticated ?? false)
                        {
                            <li style="background-color: #dc3545; border-color: #dc3545; border-radius: 5px;" class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Account" asp-action="Logout">
                                    <i class=" fas fa-sign-out-alt nav-icon"></i>
                                    <p>Log out</p>
                                </a>
                            </li>
                        }
                    </ul>
                </nav>
            </div>
        </aside>
        <div class="content-wrapper">
            <div class="content-header">
                <div class="container-fluid">
                </div>
            </div>
            <div class="content">
                <div class="container-fluid">
                    <partial name="_NotificationPartial" />
                    @RenderBody()
                </div>
            </div>
        </div>
        <aside class="control-sidebar control-sidebar-dark">
            <div class="p-3">
                <h5>Title</h5>
                <p>Sidebar content</p>
            </div>
        </aside>
        <footer class="main-footer">
            <div class="float-right d-none d-sm-inline">
                <span>ASGARD</span>
            </div>
            <strong>Copyright &copy; 2021 - @DateTime.Now.Year</strong> All rights reserved.
        </footer>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/ckeditor/ckeditor.js"></script>
    <script src="~/js/jquery.min.js"></script>
    <script src="~/js/jquery.dataTables.min.js"></script>
    <script src="~/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/adminlte.min.js"></script>
    <script src="~/js/dataTables.bootstrap4.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>
    <script type="text/javascript" src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.min.js"></script>

    <script>
        $(document).ready(function () {
            $('#example6').DataTable({
                "searching": false,
                "paging": true,
                "info": false,
                "lengthMenu": [10, 20, 50],
                "columnDefs": [{
                    "targets": 'no-sort',
                    "orderable": false,
                }]

            });

        });
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
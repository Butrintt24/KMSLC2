@model Kindergarten_Management_System.Models.LeaveRequestVM

@{
    ViewData["Title"] = "Details";
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
<link rel="stylesheet" href="~/css/funside.css" />

@if (Model.Approved == true)
{
    <div class="alert alert-success" role="alert">
        <div class="row">
            <div class="col-sm-12 d-flex justify-content-center">
                <p class="alert-heading p-3" style="margin:0!important; font-size:1.2rem;">Approved by: <span style="font-weight:bolder;">  @Model.ApprovedBy.FullName</span></p>
            </div>
        </div>
    </div>
}
else if (Model.Approved == false)
{
    <div class="alert alert-danger" role="alert">
        <div class="row">
            <div class="col-sm-12 d-flex justify-content-center">
                <p class="alert-heading p-2" style="margin:0!important; font-size:1.2rem;">Rejected by: <span style="font-weight:bolder;">  @Model.ApprovedBy.FullName</span></p>
            </div>
        </div>
    </div>
}
else
{

}
<section class="mx-5 " style="border-radius:1rem;">
    <div class="container p-1  ">
        <div class="row d-flex justify-content-center align-items-center ">
            <div class="col-12 col-xl-12 ">
                <div class="card" style="border-radius: 1rem; background-color:#E1EBEE; ">

                    <h3 style="font-size:2.5rem; color:darkslategray; font-family:'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif" class="d-flex justify-content-center p-3">Review [  <span class="title-word title-word-2 px-4">@Model.RequestingEmployee.FullName's</span> ] Request</h3>
                    <div>
                        <hr />
                        <dl class="row">
                            <dt class="col-12 col-sm-6  greenColor">
                                Full Name:
                            </dt>
                            <dd class="col-12 col-sm-6  dd-text ">
                                @Html.DisplayFor(model => model.RequestingEmployee.FullName)
                            </dd>
                            <dt class="col-12 col-sm-6  greenColor">
                                Leave Type:
                            </dt>
                            <dd class="col-12 col-sm-6  dd-text">
                                @Html.DisplayFor(model => model.LeaveType.Name)
                            </dd>

                            <dt class="col-12 col-sm-6  greenColor">
                                Start Date:
                            </dt>
                            <dd class="col-12 col-sm-6  dd-text">
                                @Html.DisplayFor(model => model.StartDate)
                            </dd>
                            <dt class="col-12 col-sm-6  greenColor">
                                End Date:
                            </dt>
                            <dd class="col-12 col-sm-6  dd-text">
                                @Html.DisplayFor(model => model.EndDate)
                            </dd>

                            <dt class="col-12 col-sm-6  greenColor">
                                Date Requested:
                            </dt>
                            <dd class="col-12 col-sm-6  dd-text">
                                @Html.DisplayFor(model => model.DateRequested)
                            </dd>
                            <dt class="col-12 col-sm-6  greenColor">
                                Number of days :
                            </dt>
                            <dd class="col-12 col-sm-6  dd-text">
                                <p>@(Model.EndDate.Day - Model.StartDate.Day)</p>
                            </dd>

                        </dl>
                    </div>
                    <div class="d-flex justify-content-center pb-5">
                        @if (Model.Approved == null)
                        {
                            <a class="btn btn-success mr-3" asp-action="ApproveRequest" asp-route-id="@Model.Id">
                                <i class="fa-solid fa-thumbs-up pr-2 "></i>Approve
                            </a>
                            <a class="btn btn-danger mr-3" asp-action="RejectRequest" asp-route-id="@Model.Id">
                                <i class="fa-solid fa-thumbs-down pr-2 "></i>Reject
                            </a>
                        }

                        <a class="btn btn-secondary" asp-action="Index">
                            <i class="fa fa-arrow-left pr-2"></i>Back to list
                        </a>
                    </div>

                    </div>
                </div>
            </div>
        </div>
        </section>

@model IEnumerable<Kindergarten_Management_System.Models.LeaveTypeVM>

@{
    ViewData["Title"] = "Index";
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
<link rel="stylesheet" href="~/css/funside.css" />
<span style="font-size:2.5rem; font-family:'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif" class="title-word title-word-1 d-flex justify-content-center">Leave Types</span>


<p class="d-flex justify-content-center  p-3">
    <a class="btn btn-primary " asp-action="Create">Create New</a>
</p>

<table id="example3" class="hover cell-border stripe">
    <thead style="background-color:cadetblue; ">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DefaultDays)
            </th>
            <th class="no-sort pr-5 d-flex justify-content-end"> Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DefaultDays)
                </td>
                <td class="pr-5 d-flex justify-content-end">
                    <a class="btn btn-primary mr-2" asp-action="Edit" asp-route-id="@item.Id"><i class="fa-solid fa-pen pr-2"></i>Edit</a>
                    <a class="btn btn-success mr-2" asp-action="Details" asp-route-id="@item.Id"><i class="fa-solid fa-circle-info pr-2"></i>Details</a>
                    <a class="btn btn-danger confirmDeletion" asp-action="Delete" asp-route-Id="@item.Id"><i class="fa-solid fa-trash-can pr-2"></i>Delete</a>
                
                </td>
            </tr>
        }
    </tbody>
</table>

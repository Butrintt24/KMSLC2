@model IEnumerable<AppUser>

@{
    ViewData["Title"] = "Index";
}

<h1 style="text-align: center;"><span class="greenColor">A</span>ll <span class="greenColor">U</span>sers</h1>


<table class="table table-responsive-sm table-striped my-4">
    <thead class="table-dark">
        <tr>
            <th>
                Image
            </th>

            <th>
                Full Name
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
               Contact Number
            </th>
            <th>
               Status
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td class="d-flex justify-content-center">
                @if (item.IsEmployee == true)
                {
                    <img src="~/media/employeepic/@item.TeacherImage" width="50" height="50" style="border-radius: 100%;" />
                }
                else
                {
                    <img src="~/media/studentpic/@item.StudentImage" width="50" height="50" style="border-radius: 100%;" />
                }
            </td>
            <td>
                @item.FullName
            </td>
            <td>
                @item.Email
            </td>
            <td>
                @item.PhoneNumber
            </td>
            <td>
                @if(item.IsEmployee == true)
                {
                    <p>Employee</p>
                }
                else
                {
                    <p>Student</p>        
                }
                </td>
            <td>
                @if (item.IsEmployee == true)
                {
                    <a class="btn btn-primary mr-2" asp-action="AdminEmployeeEdit" asp-route-id="@item.Id">Edit</a>
                    <a class="btn btn-info mr-2" asp-action="EmployeeDetails" asp-route-id="@item.Id">Details</a>
                    <a class="btn btn-danger confirmDeletion" asp-action="EmployeeDelete" asp-route-Id="@item.Id">Delete</a>
                }
                else
                {
                    <a class="btn btn-primary mr-2" asp-action="AdminStudentEdit" asp-route-id="@item.Id">Edit</a>
                    <a class="btn btn-info mr-2" asp-action="StudentDetails" asp-route-id="@item.Id">Details</a>
                    <a class="btn btn-danger confirmDeletion" asp-action="StudentDelete" asp-route-Id="@item.Id">Delete</a>
                }
            </td>
        </tr>
}
    </tbody>
</table>

@if (ViewBag.TotalPages > 1)
{
    <div class="d-flex w-100 justify-content-center">
        <pagination page-count="@ViewBag.TotalPages" page-target="/admin/users"
            page-number="@ViewBag.PageNumber" page-range="@ViewBag.PageRange">
        </pagination>
    </div>
}

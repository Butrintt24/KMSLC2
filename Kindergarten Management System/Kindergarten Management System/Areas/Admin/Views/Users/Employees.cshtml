@model IEnumerable<AppUser>

@{
    ViewData["Title"] = "Index";
}

<h1 style="text-align: center;"><span class="greenColor">E</span>mplo<span class="greenColor">y</span>ees</h1>

<p>
    <a  class="btn btn-outline-success" asp-controller="Account" asp-action="RegisterEmployee">Register New</a>
</p>
<table class="table table-responsive-sm table-striped my-4">
    <thead class="table-dark">
        <tr>
            <th>
                Image
            </th>
            <th>
                Full Name
            </th>
            <th>
                City
            </th>
            <th>
                Contact Number
            </th>
            <th>
                Email
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                <img src="~/media/employeepic/@item.TeacherImage" width="50" height="50" style="border-radius: 100%;" />
            </td>
            <td>
                @item.FullName
            </td>
            <td>
                @item.City
            </td>
            <td>
                @item.PhoneNumber
            </td>
            <td>
                @item.Email
            </td>
            <td>
                <a class="btn btn-primary mr-2" asp-action="AdminEmployeeEdit" asp-route-id="@item.Id">Edit</a>
                <a class="btn btn-info mr-2" asp-action="EmployeeDetails" asp-route-id="@item.Id">Details</a>
                <a class="btn btn-danger confirmDeletion" asp-action="EmployeeDelete" asp-route-Id="@item.Id">Delete</a>

            </td>
        </tr>
}
    </tbody>
</table>


@if (ViewBag.TotalPages > 1)
{
    <div class="d-flex w-100 justify-content-center">
        <pagination page-count="@ViewBag.TotalPages" page-target="/admin/users/employees"
            page-number="@ViewBag.PageNumber" page-range="@ViewBag.PageRange">
        </pagination>
    </div>
}

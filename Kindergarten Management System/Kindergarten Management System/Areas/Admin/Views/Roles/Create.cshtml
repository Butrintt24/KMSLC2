@model string

@{
    ViewData["Title"] = "Create a role";
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
<link rel="stylesheet" href="~/css/funside.css" />

<section class="mx-5" style="border-radius:1rem;">
    <div class="container p-1  ">
        <div class="row d-flex justify-content-center align-items-center ">
            <div class="col-12 col-xl-12 ">
                <div class="card" style="border-radius: 1rem; background-color:#E1EBEE; ">
                    <div class="col-md-12 text-center pt-5">
                        <h4 class="title">
                            <span class="title-word title-word-1">Create </span>
                            <span class="title-word title-word-2">Role </span>
                        </h4>
                    </div>
                    <hr>
                    <div class="row justify-content-center align-items-center">
                        <div class="col-md-10">
                            <form asp-action="Create">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                                <div class="form-group p-3">
                                    <label class="control-label greenColor pl-2">Role name</label>
                                    <input type="text" name="name" class="form-control" />
                                </div>

                                <div class="d-flex justify-content-center">
                                    <input type="submit" value="Create" class="btn btn-primary my-3 p-2 mr-2" />
                                    <a class="btn btn-info my-3 p-2 " asp-action="Index">Go Back<i class="fa-solid fa-circle-arrow-left pl-2"></i></a>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
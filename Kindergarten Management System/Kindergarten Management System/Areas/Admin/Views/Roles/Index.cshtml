@model IEnumerable<Microsoft.AspNetCore.Identity.IdentityRole>

@{
    ViewData["Title"] = "Roles";
}

<link rel="stylesheet" href="~/css/funside.css" />
<span style="font-size:3.1rem; font-family:'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif" class="title-word title-word-2 d-flex justify-content-center">Roles</span>
<p class="d-flex justify-content-center  p-3">
    <a class="btn btn-primary " asp-action="Create">Create New</a>
</p>

<table id="example" class="hover cell-border" style="border:1px solid darkgray;">
    <thead style="background-color:cadetblue; ">
        <tr>
            <th>Role</th>
            @*<th>Users</th>*@
            <th class="pr-5 d-flex justify-content-end"> Actions</th>
        </tr>
    </thead>
    <tbody class=" cell-border ">
        @foreach (var role in Model)
        {
            <tr>
                <td>@role.Name</td>
                @* <td user-role="@role.Id"></td>*@
                <td class="pr-5 d-flex justify-content-end">
                    <a class="btn btn-primary mr-2" asp-action="Edit" asp-route-id="@role.Id">Edit <i class="fa-solid fa-pen pl-2"></i></a>
                    <a class="btn btn-danger confirmDeletion" asp-action="Delete" asp-route-Id="@role.Id"> Delete<i class="fa-solid fa-trash-can pl-2"></i></a>
                </td>
            </tr>
        }
    </tbody>
</table>
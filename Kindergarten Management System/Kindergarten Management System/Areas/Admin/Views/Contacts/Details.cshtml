@model Kindergarten_Management_System.Models.Contact

@{
    ViewData["Title"] = "Details";
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
<link rel="stylesheet" href="~/css/funside.css" />

<section class="mx-5" style="border-radius:1rem;">
    <div class="container p-1  ">
        <div class="row d-flex justify-content-center align-items-center ">
            <div class="col-12 col-xl-12 ">
                <div class="card" style="border-radius: 1rem; background-color:#E1EBEE; ">
                    <div class="col-md-12 text-center pt-5">
                        <h4 class="title">
                            <span class="title-word title-word-1">Message </span>
                            <span class="title-word title-word-2">Details </span>
                        </h4>
                    </div>
                    <div class="card-bodyy little-profile  mt-3">
                        <hr />
                        <dl class="row p-2">
                            <dt class="col-12 col-sm-6  greenColor  ">
                                Full Name:
                            </dt>
                            <dd class="col-12 col-sm-6  dd-text">
                                @Html.DisplayFor(model => model.FullName)
                            </dd>
                            <dt class="col-12 col-sm-6   greenColor ">
                                @Html.DisplayNameFor(model => model.Email):
                            </dt>
                            <dd class="col-12 col-sm-6  dd-text">
                                @Html.DisplayFor(model => model.Email)
                            </dd>
                            <dt class="col-12 col-sm-6   greenColor">
                                @Html.DisplayNameFor(model => model.Subject):
                            </dt>
                            <dd class="col-12 col-sm-6 dd-text">
                                @Html.DisplayFor(model => model.Subject)
                            </dd>
                            <dt class="col-12 col-sm-6   greenColor ">
                                @Html.DisplayNameFor(model => model.Message):
                            </dt>
                            <dd class="col-12 col-sm-6 dd-text">
                                @Html.DisplayFor(model => model.Message)
                            </dd>
                            <dt class="col-12 col-sm-6 greenColor">
                                Recived:
                            </dt>
                            <dd class="col-12 col-sm-6 dd-text">
                                @Model.Order.ToString("dd.MM.yyyy - HH:mm")
                            </dd>
                        </dl>
                        <hr>
                        <div class="d-flex justify-content-center">
                           <a class="btn btn-info my-3 p-2 " asp-action="Index">Go Back<i class="fa-solid fa-circle-arrow-left pl-2"></i></a>
                        </div>


                    </div>
                </div>
            </div>
        </div>
    </div>
</section>


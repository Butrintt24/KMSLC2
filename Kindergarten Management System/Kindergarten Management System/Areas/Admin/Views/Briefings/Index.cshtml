@model IEnumerable<Kindergarten_Management_System.Models.Briefing>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                Date Created
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @item.Title
            </td>
            <td>
                @item.Order.Day/@item.Order.Month/@item.Order.Year
            </td>
            <td>
                <a class="btn btn-primary mr-2" asp-action="Edit" asp-route-id="@item.BriefingId">Edit</a>
                <a class="btn btn-info mr-2" asp-action="Details" asp-route-id="@item.BriefingId">Details</a>
                <a class="btn btn-danger confirmDeletion" asp-action="Delete" asp-route-Id="@item.BriefingId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>

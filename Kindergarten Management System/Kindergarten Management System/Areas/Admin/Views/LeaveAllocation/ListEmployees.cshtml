@model IEnumerable<AppUserVM>

@{
    ViewData["Title"] = "ListEmployees";
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
<link rel="stylesheet" href="~/css/funside.css" />
<span style="font-size:2.5rem; font-family:'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif" class="title-word title-word-1 d-flex justify-content-center">List of Employees</span>

<table id="example4" class="hover cell-border stripe">
    <thead style="background-color:cadetblue; ">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FullName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th class="no-sort d-flex justify-content-end pr-5">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.FullName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td class="pr-3">
                    <a class="btn btn-info mr-2 " style="float:right;" asp-action="Details" asp-route-id="@item.Id">Details <i class="fa-solid fa-circle-info pl-2"></i> </a>
                </td>
            </tr>
        }
    </tbody>
</table>